<div class="hero">
  <h1>Hi, I am Goldy.</h1>
  <p class="text-one-line">Web developer and content creator.</p>
  <img src="/img/hero-image.webp.jpg" alt="Hero Image" class="hero-image">
</div>
<section class="latest-posts">
  <h2 class="article__heading">Latest Posts</h2>
  <ul class="article-ul">
    <% data.forEach(post=> { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span>
            <%= post.title %>
          </span>
          <span class="article-list__date">
            <%= post.createdAt.toDateString() %>
          </span>
        </a>
      </li>
      <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
  
   
   
  
</section>


